<MudDataGrid Items="@ListaPacientes" Elevation="25" SortMode="SortMode.Single">
    <Columns>
        <HierarchyColumn T="PacienteDto" />
        <PropertyColumn Property="x => x.NumHistoria" Title="Número de Historia" />
        <PropertyColumn Property="x => x.FechaNac" Title="Fecha Macimiento" />
        <PropertyColumn Property="x => x.Sexo" Title="Género" />
        <PropertyColumn Property="x => x.Talla" />
        <PropertyColumn Property="x => x.TipoEpilepsia" Title="Tipo Epilepsia" />
        <PropertyColumn Property="x => x.TipoMutacion" Title="Tipo Mutación" />
        <PropertyColumn Property="x => x.EnfermRaras" Title="Enfermedad Rara" />
    </Columns>
    <ChildRowContent>
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@context.Item.NumHistoria</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
               <MudGrid Spacing="3" Justify="Justify.Center">
                   @* Fecha Nacimiento *@
                   <MudItem xs="12" md="6">
                       <MudText Typo="Typo.h6">Fecha Nacimiento:</MudText>
                       <MudText>@context.Item.FechaNac</MudText>
                   </MudItem>

                    @* Genero *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Género:</MudText>
                        <MudText>@context.Item.Sexo</MudText>
                    </MudItem>
                    
                    @* Fecha Diagnostico *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Fecha Diagnóstico:</MudText>
                        <MudText>@context.Item.FechaDiagnostico</MudText>
                    </MudItem>
                    
                    @* Fecha Fractalidad *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Fecha Fractalidad:</MudText>
                        <MudText>@context.Item.FechaFractalidad</MudText>
                    </MudItem>

                    @* Talla *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Talla:</MudText>
                        <MudText>@context.Item.Talla</MudText>
                    </MudItem>

                    @* Tipo Epilepsia *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Tipo Epilepsia:</MudText>
                        <MudText>@context.Item.TipoEpilepsia</MudText>
                    </MudItem>

                    @* Tipo Mutación *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Tipo Mutación:</MudText>
                        <MudText>@context.Item.TipoMutacion</MudText>
                    </MudItem>

                    @* Enfermedad Rara *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Enfermedad Rara:</MudText>
                        <MudText>@context.Item.EnfermRaras</MudText>
                    </MudItem>

                    @* Descripcion Enfermedad Rara *@
                    @if(!string.IsNullOrEmpty(context.Item.EnfermRaras) && context.Item.EnfermRaras == "No"){
                        <MudItem xs="12" md="6">
                            <MudText Typo="Typo.h6">Descripción:</MudText>
                            <MudText>@context.Item.DescripEnferRaras</MudText>
                        </MudItem>
                    }

                    @* Fecha Creacion *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Creación:</MudText>
                        <MudText>@context.Item.FechaCreac</MudText>
                    </MudItem>

                    @* Fecha Modificacion *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Última Modificación:</MudText>
                        <MudText>@context.Item.FechaUltMod</MudText>
                    </MudItem>

                    @* Medico Creador *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Médico Creador:</MudText>
                        <MudText>@context.Item.MedicoCreador</MudText>
                    </MudItem>

                    @* Medico Ult Modificacion *@
                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.h6">Médico Última Modificación:</MudText>
                        <MudText>@context.Item.MedicoUltMod</MudText>
                    </MudItem>
               </MudGrid>
            </MudCardContent>
            <MudCardActions>
                <MudText Typo="Typo.subtitle2">Creado por
                    <MudChip Variant="Variant.Text" Color="Color.Dark">@context.Item.MedicoCreador</MudChip>
                    e   l @context.Item.FechaCreac.ToShortDateString()</MudText>
            </MudCardActions>
        </MudCard>
    </ChildRowContent>
    <PagerContent>
        <MudDataGridPager T="PacienteDto" InfoFormat="@("{first_item}-{last_item} de {all_items}")" RowsPerPageString="Filas por página:" />
    </PagerContent>
</MudDataGrid>
