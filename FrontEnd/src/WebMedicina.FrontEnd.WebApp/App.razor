 <CascadingAuthenticationState> 
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (noRedirigido) {
                        redirigirManager.RedirigirDefault("login");
                        noRedirigido = false;
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <Error mensajeError="Dirección <b> no encontrada</b>" NombreImagen="Error1" />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState> 

@code{
    [Inject] private IRedirigirManager redirigirManager { get; set; } = null!;
    private bool noRedirigido { get; set; } = true;


}