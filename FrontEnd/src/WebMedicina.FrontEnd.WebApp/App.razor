 <CascadingAuthenticationState> 
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>

                    @if (noRedirigido) {
                        if (context != null && context.User.Identity.IsAuthenticated == true) {
                            redirigirManager.RedirigirDefault();
                        } else {
                            redirigirManager.RedirigirLogin();
                        }
                        noRedirigido = false;
                    }
                </NotAuthorized>
                <Authorizing>
                    Autorizando al usuario  
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <h1 class="mt-5 ml-5">Dirección no encontrada</h1>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState> 

@code{
    [Inject]
    private IRedirigirManager redirigirManager { get; set; }
    private bool noRedirigido { get; set; } = true;

}