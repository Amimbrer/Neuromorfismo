@inject NavigationManager navigationManager

@code {
    [Parameter]
    public string enlaceRedirigir { get; set; } = String.Empty;
    private string urlActual;
    private string baseUri;

    protected override void OnInitialized() {
        urlActual = navigationManager.Uri;
        baseUri = navigationManager.BaseUri;
        if (urlActual.Replace(baseUri, "") != "login") {
            navigationManager.NavigateTo(enlaceRedirigir, forceLoad: true);
        }
    }
}
 