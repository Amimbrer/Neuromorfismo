<MudTooltip Arrow="true" Placement="@Posicion" Color="@Color">
    <ChildContent>
        <MudIconButton Icon="@Icono" Size="SizeIcono" Class="ml-1" />
    </ChildContent>
    <TooltipContent>
        <MudText Typo="Typo.body2" Align="Align.Center">@Titulo</MudText>
        <MudText Typo="Typo.body2" Align="Align.Left">@Contenido</MudText>
    </TooltipContent>
</MudTooltip>


@code{
    // Icono del tooltip
    [Parameter] public string Icono { get; set; } = Icons.Material.Outlined.Info;

    // Titulo 
    [Parameter] public MarkupString Titulo { get; set; } = new MarkupString();

    // Contenido
    [Parameter] public MarkupString Contenido { get; set; } = new MarkupString();

    // Color
    [Parameter] public Color Color { get; set; } = Color.Default;

    // Tamaño icono
    [Parameter] public Size SizeIcono { get; set; } = Size.Medium;

    // Posicion 
    [Parameter] public Placement Posicion { get; set; } = Placement.Top;
}